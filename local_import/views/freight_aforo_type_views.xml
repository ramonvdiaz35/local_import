<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!--        Formulario tipos de aforo-->
        <record id="view_tiposA_form" model="ir.ui.view">
            <field name="name">view.tiposA.form</field>
            <field name="model">freight.aforo.types</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="type"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        Lista de tipos de aforo-->
        <record id="view_tipoA_tree" model="ir.ui.view">
            <field name="name">view.tipoA.tree</field>
            <field name="model">freight.aforo.types</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!--        action de tipos de aforo-->
        <record id="action_tiposA_view" model="ir.actions.act_window">
            <field name="name">Tipos de Aforos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">freight.aforo.types</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new aforo types.
                </p>
            </field>
        </record>

        <!--        Menu Aforo Types-->
        <menuitem name="Aforo Types" parent="freight.freight_configuration" id="menu_freight_aforo_type_id"
                  action="action_tiposA_view" sequence="8"/>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
<!--        res.partner inherit form-->
        <record id="view_inherit_partner_form" model="ir.ui.view">
            <field name="name">view.inherit.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="purchase.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_purchase_currency_id']" position="after">
                    <field name="import_opt"/>
                </xpath>

            </field>
        </record>
        
        <!--        res.partner search inherit-->
        <record id="view_inherit_partner_search" model="ir.ui.view">
            <field name="name">view.inherit.partner.search</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='type_company']" position="after">
                    <separator/>
                <filter string="Import" name="import" domain="[('import_opt','=',True)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
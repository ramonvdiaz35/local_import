<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!--        Formulario regimen de importacion-->
        <record id="view_regimernI_form" model="ir.ui.view">
            <field name="name">view.regimenI.form</field>
            <field name="model">freight.import.regimen</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="tipo"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="type"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        Lista de regimen de importaciones-->
        <record id="view_regimenI_tree" model="ir.ui.view">
            <field name="name">view.regimenI.tree</field>
            <field name="model">freight.import.regimen</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="tipo"/>
                </tree>
            </field>
        </record>

        <!--        action de regimen de importaciones-->
        <record id="action_regimenI_view" model="ir.actions.act_window">
            <field name="name">Regimen de Importaciones</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">freight.import.regimen</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new import regien.
                </p>
            </field>
        </record>

        <!--        Menu Import Regimen-->
        <menuitem name="Import Regimen" parent="freight.freight_configuration" id="menu_freight_import_regiment_id"
                  action="action_regimenI_view" sequence="7"/>
    </data>
</odoo>